<h1>Your Cart</h1>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <tr>
          <td><%= item[:product].name %></td>
          <td>
            <%= form_with url: update_cart_path(item[:product]), method: :patch, local: true do |f| %>
              <%= f.number_field :quantity, value: item[:quantity], min: 1 %>
              <%= f.submit "Update" %>
            <% end %>
          </td>
          <td><%= number_to_currency(item[:product].price) %></td>
          <td><%= number_to_currency(item[:product].price * item[:quantity]) %></td>
          <td>
            <%= button_to "Remove", remove_from_cart_path(item[:product]), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Total: <%= number_to_currency(@total) %></h3>

<%= link_to "Continue Shopping", store_index_path, class: "btn-continue-shopping" %>
<%= link_to "Checkout", checkout_path, class: "btn-checkout" %>
<% end %>